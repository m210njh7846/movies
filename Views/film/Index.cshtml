@model IEnumerable<books.Models.Film>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="container">
    <h1>Index</h1>

    <p>
        <a asp-action="Create" class="btn btn-secondary" style=" background:green" >Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.categrayfilm)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.link)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.categrayfilm.tittle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.image)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.link)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" style="background:blue">Edit</a> 
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success" style="background:gray">Details</a> 
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="background:red">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
